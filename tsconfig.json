{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/backend/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["apps/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
