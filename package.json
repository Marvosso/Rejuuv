{
  "name": "recovery-ai-mvp",
  "version": "1.0.0",
  "description": "AI-powered movement recovery guidance app",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared"
  ],
  "scripts": {
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "postinstall": "npm install --workspaces"
  },
  "keywords": [
    "ai",
    "recovery",
    "health",
    "claude"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.3.0"
  }
}
